<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Soundtrack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTextview" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/custom_primary</item>
    </style>

    <style name="CustomProgressBar">
        <item name="colorAccent">@color/custom_primary</item>
    </style>

    <style name="CustomIconButton" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:padding">@dimen/space10</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconGravity">end</item>
    </style>

</resources>